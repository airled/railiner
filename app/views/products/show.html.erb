<h1>Информация о продукте: <%= @product.name %></h1>
<div class="row">
  <div class="col-lg-3">
    <%= image_tag @product.large_image_url %>
  </div>
  <div class="col-lg-9">
    <%= link_to @product.name, @product.url, :target => "_blank" %>
    <br>
    <%= @product.description %>
    <br>
    цена: <%= @product.min_price + ' - ' + @product.max_price %>
  </div>
</div>
