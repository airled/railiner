<h1>Categories list</h1>

<table>
  <tr>
    <th>id</th>
    <th>Url</th>
    <th>Name</th>
    <th>Name (rus)</th>
    <th>Is new</th>
  </tr>

  <% @categories.each do |category| %>
    <tr>
      <td><%= category.id %></td>
      <td><%= category.url %></td>
      <td><%= category.name %></td>
      <td><%= category.name_ru %></td>
      <td><%= category.is_new %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Go back', root_path %>
