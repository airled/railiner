<h1>Список продуктов для категории: <%= @category.name_ru %></h1>

<%= paginate @products %>

<% @products.each do |product| %>
  <div class="row">
    <div class="col-lg-3">
      <%= image_tag product.image_url %>
    </div>
    <div class="col-lg-9">
      <%= link_to product.name, product_path(id: product.id) %>
      <br>
      <%= product.description %>
      <br>
      цена: <%= product.min_price + ' - ' + product.max_price %>
    </div>
  </div>
  <br>
<% end %>

<%= paginate @products %>
