<h1>Список продуктов для категории: <%= @category.name_ru %></h1>

<%= paginate @products %>

<% @products.each do |product| %>
  <div class="row">
    <div class="col-lg-4">
      <%= image_tag product.image_url %>
    </div>
    <div class="col-lg-8">
      <%= link_to product.name, product.url %>
      <br>
      <%= product.description %>
      <br>
      цена: <%= product.min_price + ' - ' + product.max_price %>
    </div>
  </div>
  <br>
<% end %>

<%= paginate @products %>