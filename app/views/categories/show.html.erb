<h1><%= "#{@category.name_ru} (#{@amount} продукта(ов))" %></h1>

<%= paginate @products %>

<% @products.each do |product| %>
  <div class="row">
    <div class="col-lg-3">
      <%= image_tag product.small_image_url %>
    </div>
    <div class="col-lg-9">
      <%= link_to product.name, product_path(url_name: product.url_name) %>
      <br>
      <%= product.description %>
      <% if product.min_price %>
        <br>
        цена: <%= product.minprice + ' - ' + product.maxprice + ' руб.' %>
      <% end %>
    </div>
  </div>
  <br>
<% end %>

<%= paginate @products %>
